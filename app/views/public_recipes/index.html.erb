<div class="home"><%= link_to "Home", "/", class: "hover home-inner" %></div>
<h1>Public Recipes</h1>
<div>
  <% @public_recipes.each do |recipe|%>
    <div class="recipe-each">
      <div class="recipe-header">
      <h1>
        <%= link_to recipe.name, public_recipe_path(recipe), class: "recipe" %>
      </h1>
      <h5>By: <%= recipe.user.name %>
      </h5>
      </div>
      <div>
      <p>Total food items: <%= recipe.recipe_foods.length %> 
      </p>
      <p>
        Total price: $<%= recipe.total_price %>
      </p>
      </div>
    </div>
  <%end%>
</div>