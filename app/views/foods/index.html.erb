<div class="home"><%= link_to "Home", "/", class: "hover home-inner" %></div>
<div class="addfood"><%= link_to "Add Food", new_food_path, class: "addfood-inner hover home-inner" %></div>
<div class="foods">
<h1>Foods</h1>
<table>
  <tr>
    <th>Food</th>
    <th>Measurement unit</th>
    <th>Unit price</th>
    <th>Quantity</th>
    <th>Actions</th>
  </tr>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= number_to_currency(food.price) %></td>
      <td><%= food.quantity %></td>
      <td>
          <%= button_to "Delete", food, method: :delete, class: "hover home-inner" %>
          <%= link_to "Edit", edit_food_path(food), class: "hover home-inner" %>
        </td>
    </tr>
  <% end %>
  </table>
  </div>