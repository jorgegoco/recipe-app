<div class="home"><%= link_to "Home", "/", class: "hover home-inner" %></div>
<div class="foods">
  <h1>Shopping List</h1>
  <div class="shopping-list-paragraphs">
    <p>Amount of food items to buy: <strong><%= @recipe_foods.count %></strong></p>
    <p>Total value of food needed: <strong>$<%= @total_price %></strong></p>
  </div>
  <table>
    <tr>
      <th><strong>Food</strong></th>
      <th><strong>Quantity</strong></th>
      <th><strong>Price</strong></th>
    </tr>
    <%  @recipe_foods.each do |food| %>
      <tr>
        <td><%= food.food.name %></td>
        <td><%= food.quantity %><%= food.food.measurement_unit %></td>
        <td>$<%= food.food.price*food.quantity %></td>
      </tr>
    <%end%>
  </table>
</div>
<div class="backto"><%= link_to "Back to Recipe", recipe_path(@recipe_id), class: "hover home-inner" %></div>